{
  "extends": "../config/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "dill-pixel/*": [
        "../src/*"
      ],
      "@dill-pixel/plugin-snap-physics/*": [
        "../packages/plugins/physics/snap/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
