{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "composite": true,
    "paths": {
      "dill-pixel/*": [
        "../../../src/*"
      ],
      "@rive-app/canvas-advanced-lite": [
        "./node_modules/@rive-app/canvas-advanced-lite/rive_advanced.mjs.d.ts"
      ]
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "./@rive-app/canvas-advanced-lite/rive_advanced.mjs.d.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "../../src/**/*.ts"
  ],
  "exclude": [
    "./lib",
    "./node_modules"
  ]
}
