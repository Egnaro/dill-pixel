{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "useDefineForClassFields": false,
        "strictPropertyInitialization": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}
